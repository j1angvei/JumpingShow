<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Config" />

    <style name="AppTheme.Action" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toggle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/text_toggle</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="AppTheme.Button.Image">
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="AppTheme.Button.Toggle">
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>

    </style>
