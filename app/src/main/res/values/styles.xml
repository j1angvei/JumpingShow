<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Config" />

    <style name="AppTheme.Action" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.Button.Image">
        <item name="android:background">@color/transparent</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="AppTheme.Button.Toggle">
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>

    </style>

    <style name="AppTheme.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.Container" />

    <style name="AppTheme.Input" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">numberSigned|numberDecimal</item>

    </style>

</resources>
