<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Config" />

    <style name="AppTheme.Action" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toggle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_toggle</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/text_toggle</item>
    </style>

</resources>
